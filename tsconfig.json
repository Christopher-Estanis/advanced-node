{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src", "tests"]
}